<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="ase.pdm.pdm_medical.CreatePatientActivity"
    tools:ignore="MergeRootFrame">
    
    <TableLayout
        android:id="@+id/tlMainForm"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:stretchColumns="1"
	    android:padding="10dp">
    
	    <TableRow
	        android:id="@+id/trPatientNameRow"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="10dp">
	    	<TextView 
	    	    android:text="Nume pacient:"
	    	    android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical|left"
	    	    android:id="@+id/tvPatientName"
	    	    android:textSize="15sp"
	    	    android:textColor="@android:color/white"
	    	    android:textStyle="bold" />
	
	    	<EditText
	    	    android:id="@+id/ettPatientName"
	    	    android:height="30dp"
	    	    android:width="175dp"
	    	    android:inputType="text"
	    	    android:layout_gravity="center_vertical|right"
	    	    android:background="@drawable/rounded_corners" />
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/trPatientGenderRow"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="10dp">
	    	<TextView 
	    	    android:text="Sex:"
	    	    android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical|left"
	    	    android:id="@+id/tvPatientGender"
	    	    android:textSize="15sp"
	    	    android:textColor="@android:color/white"
	    	    android:textStyle="bold" />
	    	<EditText
	    	    android:id="@+id/ettPatientGender"
	    	    android:height="30dp"
	    	    android:width="175dp"
	    	    android:inputType="text"
	    	    android:layout_gravity="center_vertical|right"
	    	    android:background="@drawable/rounded_corners" />
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/trPatientBirthDayRow"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="10dp">
	    	<TextView 
	    	    android:text="Data nasterii:"
	    	    android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical|left"
	    	    android:id="@+id/tvPatientBirthDay"
	    	    android:textSize="15sp"
	    	    android:textColor="@android:color/white"
	    	    android:textStyle="bold" />
	    	<EditText
	    	    android:id="@+id/ettPatientBirthDay"
	    	    android:focusable="false"
	    	    android:height="30dp"
	    	    android:width="175dp"
	    	    android:inputType="text"
	    	    android:layout_gravity="center_vertical|right"
	    	    android:background="@drawable/rounded_corners" /> 
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/trPatientWeightRow"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="10dp">
	    	<TextView 
	    	    android:text="Greutate (kg):"
	    	    android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical|left"
	    	    android:id="@+id/tvPatientWeight"
	    	    android:textSize="15sp"
	    	    android:textColor="@android:color/white"
	    	    android:textStyle="bold" />
	    	<EditText
	    	    android:id="@+id/etnPatientWeight"
	    	    android:inputType="number"
	    	    android:height="40dp"
	    	    android:width="175dp"
	    	    android:layout_gravity="center_vertical|right"
	    	    android:background="@drawable/rounded_corners" />
	    </TableRow>
	    
	    <TableRow
	       android:id="@+id/trSubmitPatientRow"
	       android:orientation="horizontal"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:paddingBottom="10dp">
	    	<Button 
	    	    android:id="@+id/bSubmitPatient"
	    	    android:text="Creaza Patient" />    
	   	</TableRow>
    
    </TableLayout>
    
</RelativeLayout>
